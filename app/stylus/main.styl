body
  height 20000px

$name = 'i4j5-'

.{$name}  

  &callme
    box-sizing border-box
    display block
    right 5%
    bottom 15%
    position fixed
    z-index 11000
    background #FFF
    border-radius: 30px
    width 56px
    height 56px
    box-shadow 0 0 15px rgba(0, 0, 0, .3)
    transform-style preserve-3d
    transition all .5s cubic-bezier(0.86, -0.2, 0.03, 1.18)
    
    &_active
      right 50%
      bottom 40%
    
    &-bg
      position fixed
      width 100%
      height 100%
      background-color rgba(0,0,0,0)
      top 0
      left 0
      z-index 10000
      display none
      
      &_active
        display block
    
    
    &__icon 
      width 56px
      height 56px
      // background-image url('data:image/png;base64,')
      // background-size 30px
      // background-position center
      // background-repeat no-repeat
      background-color #fff
      cursor pointer
      border-radius 50%
    
    &__phone
      position relative
      top 50%
      left 50%
      fill #77b3d4
      margin-top -15px
      margin-left -15px
      width 30px
      height 30px
      animation i4j5-callme__phone 5s both ease-in-out infinite
      
    
    &:before, &:after
      content ''
      width 56px
      height 56px
      position absolute
      display block
      top 0
      left 0
      z-index -1
      border-radius 50%
      background-clip padding-box
      
    &:before 
      animation i4j5-callme__before 3s both ease-in-out infinite
      
    &:after 
      animation i4j5-callme__after 3s both ease-in-out infinite
    

    $placeholde = #545454 
     
    &__input
      height 30px
      width 145px
      padding 0 8px
      display inline-block
      box-sizing border-box
      border 1px solid rgba(0, 0, 0, .15)
      box-shadow inset 0px 1px 1px rgba(0, 0, 0, .07)
      background-color #fff
      border-radius 3px/4px
      margin 0
      font-size 13px
      color #5d5d5d
      outline none
      float left
  
      &::-moz-input-placeholde
        color $placeholde
      &::-webkit-input-placeholde
        color $placeholde
      ::-webkit-input-placeholder
        color $placeholde
      &::-input-placeholde
         color $placeholde
         
    &__form
      margin 0 auto
      display table
      margin-top 15px
      
    &__title
      margin-top 10px
      color #585858
      font-size 14px
      
    &__btn
      display inline-block
      padding 0 8px
      margin 0
      font-size 13px
      line-height 30px
      color #fff
      background-color #77B3D4
      border-radius 3px/4px
      float left
      margin-left 5px
      cursor pointer

    &__modal
      box-sizing border-box
      width 280px 
      height 100px
      background-color #FBFBFB
      position relative
      display block
      top -190px
      left -112px
      border-radius 4px 
      border 1px solid #EFEFEF
      box-shadow inset 0px 1px 1px rgba(0, 0, 0, .03)
      opacity 0
      transition all .6s linear
      padding 5px
      font-size 14px
      text-align center
      font-family arial
      z-index 11000      
     
      &:after
      &:before
        content ''
        width 0px
        height 0px
        position absolute
        display block
      &:before
        bottom -31px
        right 125px
        border 15px solid transparent  
        border-top 15px solid #EFEFEF
        z-index 1
      &:after
        bottom: -30px;
        right: 125px;
        border 15px solid transparent  
        border-top 15px solid #FBFBFB
        z-index 2
        
      &_active
        opacity 1


@keyframes {$name}callme__phone
  0%
    transform rotate(0deg)
  5%
    transform rotate(60deg)
  10%
    transform rotate(30deg)
    width 40px
    height 40px
    margin-top -20px
    margin-left -20px
  15%
    transform rotate(50deg)
    width 40px
    height 40px
    margin-top -20px
    margin-left -20px
  20%
    transform rotate(30deg)
    width 40px
    height 40px
    margin-top -20px
    margin-left -20px
  25%
    transform rotate(50deg)
  32%
    transform rotate(0deg)
    width 30px
    height 30px
    margin-top -15px
    margin-left -15px
  100%
    transform rotate(0deg)

@keyframes {$name}callme__before
  0%
    box-shadow 0px 0px 0px 0 #77B3D4
  30%
    box-shadow 0px 0px 0px 15px rgba(119, 179, 212, 0.1)
  100%
    box-shadow 0px 0px 0px 0 #77B3D4

@keyframes {$name}callme__after
  0%
    box-shadow 0px 0px 0px 0 #77B3D4
  70%
    box-shadow 0px 0px 0px 15px rgba(119, 179, 212, 0.1)
  100%
    box-shadow 0px 0px 0px 0 #77B3D4